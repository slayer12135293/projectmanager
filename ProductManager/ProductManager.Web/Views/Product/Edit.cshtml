        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentDiscount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CurrentDiscount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CurrentDiscount, "", new { @class = "text-danger" })
            </div>
        </div>

