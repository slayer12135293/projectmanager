            </div>
        </div>
        
        
        <div class="form-group">
            @Html.LabelFor(model => model.ProductType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="validation-textbox-message" name="ProductType">
                    @foreach (var type in Model.ProductTypeViewModels)
                    {
                        <option value="@type.Id" 
                            
                            @if (Model.ProductType == type.Id)
                            {
                                @:selected
                            }
                            
                                > @type.Name</option>
                    }
                </select>
            </div>
        </div>
        
        
        


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
