@model ProductManager.Web.ViewModels.CreateProductViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Product</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

