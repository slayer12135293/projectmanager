        </div>
        
        
        <div class="editor-label">
            @Html.LabelFor(model => model.ColoCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ColoCode)
            @Html.ValidationMessageFor(model => model.ColoCode)
        </div>
        
        
        
        <div class="editor-label">
