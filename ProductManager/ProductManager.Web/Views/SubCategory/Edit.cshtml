@model ProductManager.Web.ViewModels.UpdateSubCategoryViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Subcategory</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Category</legend>

        @Html.HiddenFor(model => model.SubCategoryId)
        @Html.HiddenFor(model => model.CategoryId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            <section class="validation-textbox-message">
                @Html.ValidationMessageFor(model => model.Name)
            </section>

        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            <section class="validation-textbox-message">
                @Html.ValidationMessageFor(model => model.Description)
            </section>

        </div>
        <br />
        <div>
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
        <br />
    </fieldset>
}

<div>
    @Html.ActionLink("Back to subcategory list page", "Details", "Category",new {id = @Model.CategoryId}, null)
</div>
