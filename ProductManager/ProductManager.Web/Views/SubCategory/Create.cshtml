@model ProductManager.Web.ViewModels.CreateSubCategoryViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create";
}
<h2>Create a Subcategory</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SubCategory</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            <section class="validation-textbox-message">
                @Html.ValidationMessageFor(model => model.Name)
            </section>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })

            <section class="validation-textbox-message">
                @Html.ValidationMessageFor(model => model.Description)
            </section>

        </div>
        <br />
        <p>
            <input type="submit" value="Create" class="btn btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Category detail page","Details","Category", new {id = Model.CategoryId},null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
